<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fedesoft.WomApp.App.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="agregar_usuario_64x64.png" HeightRequest="64" WidthRequest="64" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Entry VerticalOptions="Center" HorizontalOptions="Fill" Placeholder="Ej. usuario@womaap.com" Text="{Binding Email}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>